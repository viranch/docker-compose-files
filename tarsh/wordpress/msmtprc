# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /tmp/msmtp.log

# Gmail
account        foo
host           smtp.example.com
port           587
from           user@example.com
user           user@example.com
password       smtppass

# Set a default account
account default : foo
